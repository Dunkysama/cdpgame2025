import React from 'react';
import { useNavigate } from 'react-router-dom';

const ButtonAbandonner: React.FC = () => {
  const navigate = useNavigate();

  const handleAbandon = () => {
    // Redirige vers la page d'accueil
    navigate('/');
  };

  return (
    <button
      onClick={handleAbandon}
      style={{
        backgroundColor: '#ff4d4d', // Rouge doux
        color: 'white',
        border: 'none',
        padding: '12px 25px',
        borderRadius: '30px', // Bouton arrondi
        cursor: 'pointer',
        fontSize: '16px',
        fontWeight: 'bold',
        boxShadow: '0px 4px 6px rgba(0, 0, 0, 0.1)', // Ombre pour un effet 3D
        transition: 'all 0.3s ease', // Animation douce
      }}
      onMouseOver={(e) => {
        e.currentTarget.style.backgroundColor = '#ff1a1a'; // Rouge plus foncé au survol
      }}
      onMouseOut={(e) => {
        e.currentTarget.style.backgroundColor = '#ff4d4d'; // Retour à la couleur d'origine
      }}
    >
      Abandonner
    </button>
  );
};

export default ButtonAbandonner;